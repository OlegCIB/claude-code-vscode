{
  "name": "claude-code-vscode",
  "displayName": "Claude Code",
  "description": "VS Code extension for integrating with Claude Code CLI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:claude-code.sendToClaudeCLI"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-code.sendToClaudeCLI",
        "title": "Send to Claude CLI",
        "category": "Claude Code"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "claude-code.sendToClaudeCLI",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/mocha": "^10.0.1",
    "typescript": "^4.9.4",
    "mocha": "^10.2.0"
  }
}